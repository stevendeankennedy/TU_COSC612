<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <% if (current_user.usertype == 2) && !current_user?(user) %> | 
    <%= link_to "edit", edit_user_path(user) %> | 
    <% if user.active? %>
      <%= link_to "deactivate", user, method: :delete, data: { confirm: "Are you sure you want to deactivate #{user.name}?" } %>
    <% else %>
      Deactivated    
    <% end %>
  <% end %>
</li>
<div class="fh5co-spacer fh5co-spacer-xxs"></div>
